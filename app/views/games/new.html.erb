<h1>New game</h1>

<ul class="list-inline">
  <%@letters.each do |item| %>
  <li class="list-inline-item btn btn-primary btn-lg"><%= item %></li>
  <%end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post">
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <%= hidden_field_tag :word, @letters %>
 <%= hidden_field_tag :score, @result_score %>

   <input type="text" name="new" value="<%= params[:new] %>">
  <input class="bouton" type="submit" value="Play">
</form>
